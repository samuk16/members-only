<header>
    <nav>
        <ul>
            <li><a href="/sign-up">Sign Up</a></li>
            <% if (!locals.currentUser) { %>
                <li><a href="/log-in">Log In</a></li>
                <% } %>

                    <% if (locals.currentUser) { %>
                        <li>
                            <form action="/log-out" method="POST" style="display: inline;">
                                <button class="logoutBtn" type="submit">Logout</button>
                            </form>
                        </li>
                        <% } %>

        </ul>
    </nav>
</header>