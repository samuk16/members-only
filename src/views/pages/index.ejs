<%- include("../partials/head") %>
    <%- include("../partials/nav"); %>
        <main>
            <div>
                <ul>
                    <% if (locals.errors) { %>
                        <h1 class="error-message">
                            <%= locals.errors %>
                        </h1>
                        <%} %>
                </ul>
            </div>



            <div class="message-grid">
                <% locals.messages.forEach((message)=> { %>
                    <div class="message-card">
                        <p>
                            <%= message.member ? message.username : "******" %>
                        </p>
                        <h2>
                            <%= message.title %>
                        </h2>
                        <p>
                            <%= message.text %>
                        </p>
                        <p>
                            <%= message.member ? message.added.toLocaleString('en-US') : '******' %>
                        </p>
                    </div>

                    <%})%>
            </div>
        </main>
        <%- include("../partials/footer"); %>